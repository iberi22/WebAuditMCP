# MCP Auditor - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# WAVE API Configuration (Accessibility Scanning)
# =============================================================================
# Get your FREE API key from: https://wave.webaim.org/api/
# Si no tienes API key, el servidor sugerirá usar 'scan_axe' como alternativa local
WAVE_API_KEY=your_wave_api_key_here

# =============================================================================
# Chrome DevTools MCP Configuration
# =============================================================================
# Habilitar/deshabilitar Chrome DevTools MCP integration
CHROME_MCP_ENABLED=true

# Comando para lanzar Chrome DevTools MCP (normalmente no requiere cambios)
CHROME_MCP_COMMAND=npx
CHROME_MCP_ARGS=["-y", "chrome-devtools-mcp@latest"]

# Chrome executable path (opcional, se auto-detecta si no se especifica)
# Windows: C:\Program Files\Google\Chrome\Application\chrome.exe
# macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux: /usr/bin/google-chrome
# CHROME_PATH=/path/to/chrome

# =============================================================================
# ZAP (OWASP Zed Attack Proxy) Configuration
# =============================================================================
# ZAP API key (generated by ZAP on first run)
ZAP_API_KEY=your_zap_api_key_here

# ZAP host and port (default: localhost:8080)
ZAP_HOST=localhost
ZAP_PORT=8080

# =============================================================================
# Lighthouse Configuration
# =============================================================================
# Lighthouse output format (json, html, csv)
LIGHTHOUSE_OUTPUT_FORMAT=json

# =============================================================================
# Playwright Configuration
# =============================================================================
# Browser to use (chromium, firefox, webkit)
PLAYWRIGHT_BROWSER=chromium

# Headless mode (true/false)
PLAYWRIGHT_HEADLESS=true

# =============================================================================
# Chrome DevTools Configuration
# =============================================================================
# Chrome headless mode for Docker deployment
CHROME_HEADLESS=true

# Chrome command-line arguments (for Docker/headless)
CHROME_ARGS=--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage

# =============================================================================
# Test Credentials Configuration
# =============================================================================
# Credenciales de prueba para testing automatizado
# IMPORTANTE: Cambiar estos valores para tu aplicación

# Usuario de prueba básico
TEST_USERNAME=testuser
TEST_PASSWORD=testpass123
TEST_EMAIL=test@example.com

# Usuario administrador de prueba (opcional)
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=admin123
TEST_ADMIN_EMAIL=admin@example.com

# Usuario estudiante de prueba (para CGP Sanpatricio)
TEST_STUDENT_USERNAME=estudiante.prueba
TEST_STUDENT_PASSWORD=estudiante123
TEST_STUDENT_EMAIL=estudiante@cgpsanpatricio.com

# Usuario padre de prueba (para CGP Sanpatricio)
TEST_PARENT_USERNAME=padre.prueba
TEST_PARENT_PASSWORD=padre123
TEST_PARENT_EMAIL=padre@cgpsanpatricio.com

# =============================================================================
# Report Configuration
# =============================================================================
# Output directory for reports and artifacts
ARTIFACTS_DIR=./artifacts

# Report format (json, html, both)
REPORT_FORMAT=both

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker network for ZAP container
DOCKER_NETWORK=mcp-auditor-network

# =============================================================================
# Development Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false
